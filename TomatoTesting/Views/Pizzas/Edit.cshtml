@model TomatoPizzaCafe.Models.Pizza

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <style>

    html {
        background-image: url('@Url.Content("~/images/tomatocafe.jpg")');
        background-position: center;
        background-repeat: no-repeat;
        background-size: auto;
        height: 50%;
    }

    footer {
        position: fixed;
        bottom: 0;
    }
    </style>

</div>
<h1 style="font-family: 'Brush Script MT'; font-size: 40px; text-align:center; color: brown">Create Pizza</h1>

<h4>Edit Pizza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PizzaID" />
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EightInchPrice" class="control-label">8" Price</label>
                <input asp-for="EightInchPrice" class="form-control" />
                <span asp-validation-for="EightInchPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenInchPrice" class="control-label">10" Price</label>
                <input asp-for="TenInchPrice" class="form-control" />
                <span asp-validation-for="TenInchPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TwelveInchPrice" class="control-label">12" Price</label>
                <input asp-for="TwelveInchPrice" class="form-control" />
                <span asp-validation-for="TwelveInchPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FourteenInchPrice" class="control-label">14" Price</label>
                <input asp-for="FourteenInchPrice" class="form-control" />
                <span asp-validation-for="FourteenInchPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EighteenInchPrice" class="control-label">18" Price</label>
                <input asp-for="EighteenInchPrice" class="form-control" />
                <span asp-validation-for="EighteenInchPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
