@model IEnumerable<TomatoPizzaCafe.Models.OrderItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="font-family: 'Brush Script MT'; font-size: 40px; text-align:center; color: brown">Order Items</h1>
<style>

    html {
        background-image: url('@Url.Content("~/images/tomatocafe.jpg")');
        background-position: center;
        background-repeat: no-repeat;
        background-size: auto;
        height: 50%;
    }

    footer {
        position: fixed;
        bottom: 0;
    }
</style>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.OrderID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                Type
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size) <span>"</span>
                </td>
                <td>
                    @{
                        if (item.Pizza != null)
                        {
                            @item.Pizza.Type
                            <br />
                        }
                        else
                        {
                            @item.MakeYourOwn.NumberToppings<span>-Topping Pizza</span>
                        }
                    }
                </td>
                <td>
                    $@item.Price.ToString("#0.00")
                </td>
                <td>
                    <a asp-action="DeleteAdmin" asp-route-id="@item.OrderItemID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
