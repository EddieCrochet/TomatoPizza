@model TomatoPizzaCafe.Models.OrderItem

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="font-family: 'Brush Script MT'; font-size: 40px; text-align:center; color: brown">My Order</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Model.Number
        </dt>
        <dd>
            @if (Model.PizzaID != null)
            {
                <p>Pizza(s)</p>
            }
            else
            {
                <p>Make-Your-Own(s)</p>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderItemID" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="MyOrder">Back to List</a>
    </form>
</div>
